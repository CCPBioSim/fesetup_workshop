# T4-lysozyme: setup for standard MD simulation, e.g. for MM-PBSA
# parameterise a set of ligands and create their complexes with a set of
# proteins

logfile = T4-lysozyme_molsetup.log
forcefield = amber, ff14SB, tip3p, cm
#ff_addons = GLYCAM_06j-1, lipid14

mdengine = amber, sander

[ligand]
basedir = ligands
file.name = ligand.mol2
molecules = benzol, benzofuran, indene, p-xylene, o-xylene

box.type = rectangular
box.length = 12.0
neutralize = yes
min.nsteps = 100

# prepare the biomolecules (could also be DNA for example)
[protein]
basedir = proteins
molecules = 181L  
neutralize = True

# create the complex form the ligands and proteins above, solvate and minimise
# the complexes
[complex]
# explicit enumeration of pairs, otherwise all-with-all creation even
# when there is no [complex] section
pairs = 181L : benzol, 181L : benzofuran, 181L : indene,
	181L : isobutylbenzene, 181L : indole, 181L : n-butylbenzene,
	181L : p-xylene, 181L : o-xylene

box.type = rectangular
box.length = 12.0
align_axes = True

min.nsteps = 200
min.ncyc = 100

